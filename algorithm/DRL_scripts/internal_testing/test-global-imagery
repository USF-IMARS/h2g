#!/bin/bash
WRAPPERHOME=../../../wrapper/h2g
OUTPUTDIR=./output/


######### MODIS DATASETS #########################
INPUTDIR=~/DATA/H2G_TESTDATA/modis/180EW_DX/data
MXD03[1]=$INPUTDIR/MOD03.A2012202.2140.005.2012203033138.hdf
MXD03[2]=$INPUTDIR/MOD03.A2012202.2315.005.2012203061249.hdf
MXD03[3]=$INPUTDIR/MOD03.A2012202.2320.005.2012203061253.hdf
MXD03[4]=$INPUTDIR/MOD03.A2012203.2045.005.2012204034350.hdf
CREFL[1]=$INPUTDIR/CREFL.1km.A2012202.2140.hdf
CREFL[2]=$INPUTDIR/CREFL.1km.A2012202.2315.hdf
CREFL[3]=$INPUTDIR/CREFL.1km.A2012202.2320.hdf
CREFL[4]=$INPUTDIR/CREFL.1km.A2012203.2045.hdf

INPUTDIR=~/DATA/H2G_TESTDATA/modis/npolar_NX/data
MXD03[5]=$INPUTDIR/MOD03.A2012202.1250.005.2012202191302.hdf
MXD03[6]=$INPUTDIR/MOD03.A2012202.1430.005.2012202212211.hdf
MXD03[7]=$INPUTDIR/MOD03.A2012202.1605.005.2012202231647.hdf
MXD03[8]=$INPUTDIR/MOD03.A2012202.1610.005.2012202231621.hdf
CREFL[5]=$INPUTDIR/CREFL.1km.A2012202.1250.hdf
CREFL[6]=$INPUTDIR/CREFL.1km.A2012202.1430.hdf
CREFL[7]=$INPUTDIR/CREFL.1km.A2012202.1605.hdf
CREFL[8]=$INPUTDIR/CREFL.1km.A2012202.1610.hdf

INPUTDIR=~/DATA/H2G_TESTDATA/modis/spolar_SX/data
MXD03[9]=$INPUTDIR/MOD03.A2011354.0010.005.2011354080149.hdf
MXD03[10]=$INPUTDIR/MOD03.A2011354.0145.005.2011354080150.hdf
MXD03[11]=$INPUTDIR/MOD03.A2011354.0150.005.2011354080152.hdf
MXD03[12]=$INPUTDIR/MOD03.A2011354.0325.005.2011354093854.hdf
CREFL[9]=$INPUTDIR/CREFL.1km.A2011354.0010.hdf
CREFL[10]=$INPUTDIR/CREFL.1km.A2011354.0145.hdf
CREFL[11]=$INPUTDIR/CREFL.1km.A2011354.0150.hdf
CREFL[12]=$INPUTDIR/CREFL.1km.A2011354.0325.hdf

INPUTDIR=~/DATA/H2G_TESTDATA/modis/0EW_GX/data
MXD03[13]=$INPUTDIR/MOD03.A2012202.0955.005.2012202172239.hdf
MXD03[14]=$INPUTDIR/MOD03.A2012203.1040.005.2012203174238.hdf
MXD03[15]=$INPUTDIR/MOD03.A2012204.0940.005.2012204155554.hdf
MXD03[16]=$INPUTDIR/MOD03.A2012204.0945.005.2012204155456.hdf
CREFL[13]=$INPUTDIR/CREFL.1km.A2012202.0955.hdf
CREFL[14]=$INPUTDIR/CREFL.1km.A2012203.1040.hdf
CREFL[15]=$INPUTDIR/CREFL.1km.A2012204.0940.hdf
CREFL[16]=$INPUTDIR/CREFL.1km.A2012204.0945.hdf

INPUTDIR=~/DATA/H2G_TESTDATA/modis/mosaic10/data
MXD03[17]=$INPUTDIR/MYD03.A2014244.1630.005.2014245150400.hdf
MXD03[18]=$INPUTDIR/MYD03.A2014244.1635.005.2014245150435.hdf
CREFL[17]=$INPUTDIR/CREFL.1km.A2014244.1630.hdf
CREFL[18]=$INPUTDIR/CREFL.1km.A2014244.1635.hdf


#png + geographic (MODIS CREFL True Color)
############################################################
$WRAPPERHOME/run config.type standard config.name tcolor0_01  \
input.data ${CREFL[5]} geo ${MXD03[5]} \
input.data2 ${CREFL[6]} geo2 ${MXD03[6]} \
input.data3 ${CREFL[9]} geo3 ${MXD03[9]} \
input.data4 ${CREFL[10]} geo4 ${MXD03[10]} \
input.data5 ${CREFL[2]} geo5 ${MXD03[2]} \
input.data6 ${CREFL[3]} geo6 ${MXD03[3]} \
input.data7 ${CREFL[13]} geo7 ${MXD03[13]} \
input.data8 ${CREFL[14]} geo8 ${MXD03[14]} \
input.data9 ${CREFL[17]} geo9 ${MXD03[17]} \
input.data10 ${CREFL[18]} geo10 ${MXD03[18]} \
h2gout $OUTPUTDIR/CREFL_GLOBAL_MOSAIC_GEOG.png \
output.type png.argb \
browse_enhance true \
resolution 0.25 \
centerlat 0.0 centerlon 0.0 \
height_lat 180 width_lon 360

#png + stereographic (north polar)
$WRAPPERHOME/run config.type standard config.name tcolor0_01  \
input.data ${CREFL[5]} geo ${MXD03[5]} \
input.data2 ${CREFL[6]} geo2 ${MXD03[6]} \
input.data3 ${CREFL[7]} geo3 ${MXD03[7]} \
input.data4 ${CREFL[10]} geo4 ${MXD03[10]} \
input.data5 ${CREFL[2]} geo5 ${MXD03[2]} \
input.data6 ${CREFL[3]} geo6 ${MXD03[3]} \
input.data7 ${CREFL[13]} geo7 ${MXD03[13]} \
input.data8 ${CREFL[14]} geo8 ${MXD03[14]} \
input.data9 ${CREFL[17]} geo9 ${MXD03[17]} \
input.data10 ${CREFL[18]} geo10 ${MXD03[18]} \
h2gout $OUTPUTDIR/CREFL_GLOBAL_MOSAIC_STERE.png \
output.type png.argb \
browse_enhance true \
projection stereographic resolution 20000 \
centerlat 90.0 centerlon 0.0 \
height_km 20000 width_km 20000

