input.data10 ${CVIIRS[10]} geo10 ${GMTCO[10]} \
h2gout $OUTPUTDIR/CREFL_SINU_MOSAIC.png \
output.type png.argb \
browse_enhance true \
projection sinusoidal \
resolution 20000 \
centerlat 0.0 centerlon 0.0 \
height_km 20000 width_km 40000

$WRAPPERHOME/run \
config.type standard config.name vcviirs \
input.data ${CVIIRS[1]} geo ${GMTCO[1]} \
